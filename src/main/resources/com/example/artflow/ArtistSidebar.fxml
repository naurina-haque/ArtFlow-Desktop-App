<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Reusable artist sidebar fragment. Now has its own controller to centralize navigation. -->

<VBox fx:id="sidebar" prefHeight="525.0" prefWidth="260.0" styleClass="sidebar" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.artflow.ArtistSidebarController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label minHeight="-Infinity" prefHeight="43.0" prefWidth="200.0" styleClass="app-title" text="ART FLOW">
            <font>
                <Font name="Bell MT Bold" size="24.0" />
            </font>
        </Label>
        <VBox prefHeight="384.0" prefWidth="236.0" spacing="6.0" styleClass="menu-list">
            <children>
                <Label prefHeight="30.0" prefWidth="142.0" styleClass="menubar" text="Menu Bar" />

                <HBox fx:id="dashboardHBox" prefHeight="47.0" prefWidth="228.0" styleClass="menu-hbox">
                    <children>
                        <ImageView fitHeight="17.0" fitWidth="24.0" opacity="0.48" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@img/apps.png" />
                            </image>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" top="15.0" />
                            </HBox.margin>
                        </ImageView>
                        <Label alignment="CENTER" contentDisplay="CENTER" minHeight="19.0" prefHeight="54.0" prefWidth="201.0" styleClass="menu-item" text="Dashboard" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <HBox fx:id="artworksHBox" prefHeight="47.0" prefWidth="228.0" styleClass="menu-hbox">
                    <children>
                        <ImageView fitHeight="17.0" fitWidth="24.0" opacity="0.49" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" top="15.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@img/picture.png" />
                            </image>
                        </ImageView>
                        <Label alignment="CENTER" contentDisplay="CENTER" minHeight="19.0" prefHeight="54.0" prefWidth="201.0" styleClass="menu-item" text="My Artworks" textFill="#ffffff">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <HBox fx:id="ordersHBox" prefHeight="47.0" prefWidth="228.0" styleClass="menu-hbox">
                    <children>
                        <ImageView fitHeight="23.0" fitWidth="24.0" opacity="0.48" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" top="15.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@img/order-history.png" />
                            </image>
                        </ImageView>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="59.0" prefWidth="195.0" styleClass="menu-item" text="Orders" textFill="#ffffff" wrapText="true">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <HBox fx:id="profileHBox" prefHeight="54.0" prefWidth="228.0" styleClass="menu-hbox">
                    <children>
                        <ImageView fitHeight="23.0" fitWidth="24.0" opacity="0.48" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" top="15.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@img/user.png" />
                            </image>
                        </ImageView>
                        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="58.0" prefWidth="195.0" styleClass="menu-item" text="Profile" textFill="#ffffff" wrapText="true">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>

                <HBox fx:id="logoutHBox" prefHeight="54.0" prefWidth="228.0" styleClass="menu-hbox">
                    <children>
                        <ImageView fitHeight="23.0" fitWidth="24.0" opacity="0.48" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" top="15.0" />
                            </HBox.margin>
                            <image>
                                <Image url="@img/leave.png" />
                            </image>
                        </ImageView>
                        <Label fx:id="logoutLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="75.0" prefWidth="195.0" styleClass="menu-item" text="Logout" textFill="#ffffff" wrapText="true">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets left="12.0" right="12.0" top="20.0" />
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
