<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="440.0" prefWidth="410.0" spacing="12.0" stylesheets="@CustomerArtcard.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.artflow.CustomerArtDetailsController">
    <padding>
        <Insets bottom="12" left="12" right="12" top="12" />
    </padding>
    <children>
        <ImageView fx:id="detailImageView" fitHeight="257.0" fitWidth="284.0" preserveRatio="true" />
        <Label fx:id="detailTitle" prefHeight="30.0" prefWidth="540.0" styleClass="title-label" text="Title">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Label fx:id="detailArtist" prefHeight="17.0" prefWidth="511.0" styleClass="artist-label" text="by Artist" />
        <HBox prefHeight="29.0" prefWidth="408.0" spacing="20.0">
            <children>
                <Label fx:id="detailCategory" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="53.0" styleClass="category-label" text="Category:" />
                <Label fx:id="detailPrice" prefHeight="17.0" prefWidth="127.0" styleClass="price-label" text="" />
            <HBox prefHeight="29.0" prefWidth="154.0">
               <children>
                  <Button mnemonicParsing="false" prefHeight="34.0" prefWidth="52.0" text="-">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
                  <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="29.0" prefWidth="46.0" text="Label" />
                  <Button mnemonicParsing="false" prefHeight="38.0" prefWidth="52.0" text="+">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            </children>
        </HBox>
        <HBox spacing="10.0">
            <children>
                <Button fx:id="buyButton" styleClass="btn-buy" text="Place Order" />
                <Button fx:id="closeButton" text="Close" />
            </children>
        </HBox>
    </children>
</VBox>
