<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="693.0" prefWidth="840.0" spacing="25.0" style="-fx-background-color: linear-gradient(to bottom, #f3e8ff, #faf5ff);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.artflow.AddArtworkController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <!-- Header -->
    <VBox alignment="CENTER" spacing="5">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1a237e;" text="Create New Artwork">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <Label style="-fx-font-size: 14px; -fx-text-fill: #64748b;" text="Upload and manage your artwork collection" />
    </VBox>

    <HBox alignment="CENTER" spacing="25.0">
        <!-- Image Upload Section -->
        <VBox fx:id="previewHolder" maxHeight="468.0" prefHeight="468.0" prefWidth="344.0" spacing="18" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label fx:id="imageSectionLabel" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #7c3aed;" text="ðŸ“· Artwork Image">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <Separator style="-fx-background-color: #e2e8f0;" />

            <!-- Drag & Drop Area -->
            <VBox fx:id="dropArea" alignment="CENTER" onMouseClicked="#onDropAreaClicked" prefHeight="400.0" prefWidth="294.0" spacing="15" style="-fx-border-style: dashed; -fx-border-color: #c4b5fd; -fx-border-width: 2; -fx-background-color: #faf5ff; -fx-background-radius: 10; -fx-border-radius: 10;">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #475569;" text="DRAG &amp; DROP IMAGE HERE">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>
                <Label style="-fx-font-size: 12px; -fx-text-fill: #94a3b8;" text="or click to browse files" />
                <Label style="-fx-font-size: 10px; -fx-text-fill: #cbd5e1;" text="Supported: JPG, PNG, SVG (Max 10MB)" />
            </VBox>

            <!-- Preview container: preview card will be placed here so controls remain available -->
            <VBox fx:id="previewCardContainer" alignment="CENTER" managed="true" prefHeight="58.0" prefWidth="294.0" spacing="8" visible="true" />

            <!-- Action Buttons -->
            <HBox alignment="CENTER" prefHeight="79.0" prefWidth="294.0" spacing="12">
                <Button fx:id="chooseImageBtn" onAction="#onChooseImage" prefHeight="38" prefWidth="145" style="-fx-background-color: #8b5cf6; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 13px; -fx-font-weight: bold; -fx-cursor: hand;" text="ðŸ“¤ Upload Image">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
                <Button fx:id="removeImageBtn" onAction="#onRemoveImage" prefHeight="38" prefWidth="145" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 13px; -fx-font-weight: bold; -fx-cursor: hand;" text="ðŸ—‘ Remove Image">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Button>
            </HBox>
            <Label fx:id="uploadStatusLabel" style="-fx-font-size:12px; -fx-text-fill:#555; -fx-padding:6 0 0 0;" text="" />
        </VBox>

        <!-- Details Section -->
        <VBox minWidth="391.0" prefHeight="456.0" prefWidth="391.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #7c3aed;" text="ðŸ“ Artwork Details">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>
            <Separator style="-fx-background-color: #e2e8f0;" />

            <!-- Title -->
            <VBox spacing="8">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #7c3aed; -fx-font-weight: 600;" text="Title">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="titleField" prefHeight="40" promptText="Enter artwork title" style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-text-fill: #1e293b; -fx-font-size: 14px;" />
            </VBox>

            <!-- Description -->
            <VBox spacing="8">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #7c3aed; -fx-font-weight: 600;" text="Description">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextArea fx:id="descriptionArea" prefHeight="120.0" prefRowCount="5" prefWidth="550.0" promptText="Describe your artwork" style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-text-fill: #1e293b; -fx-font-size: 14px;" wrapText="true" />
            </VBox>
         <ComboBox fx:id="categoryCombo" prefHeight="67.0" prefWidth="341.0" promptText="Art Category" />
         <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
               <VBox prefHeight="76.0" prefWidth="357.0" spacing="8">
                  <children>
                     <Label style="-fx-font-size: 14px; -fx-text-fill: #475569; -fx-font-weight: 600;" text="Price">
                        <font>
                           <Font name="System Bold" size="14.0" />
                        </font>
                     </Label>
                     <TextField fx:id="priceField" prefHeight="42.0" prefWidth="213.0" promptText="Enter price" style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 10; -fx-text-fill: #1e293b; -fx-font-size: 14px;" />
                  </children>
               </VBox>
            </children>
         </HBox>
        </VBox>
    </HBox>

    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" maxWidth="Infinity" spacing="15">
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="saveBtn" onAction="#onSave" prefHeight="45" prefWidth="160" style="-fx-background-color: linear-gradient(to right, #6366f1, #8b5cf6); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(99,102,241,0.4), 8, 0, 0, 2);" text="ðŸš€ Publish Artwork">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>
